<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:startColor="@color/button_down_light_orange" android:endColor="@color/button_down_dark_orange" />
			
            <stroke android:width="1dp" android:color="@color/button_border" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:startColor="@color/button_down_light_orange" android:endColor="@color/button_down_dark_orange" />

            <stroke android:width="1dp" android:color="@color/button_border" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:startColor="@color/button_light_green" android:endColor="@color/button_dark_green" />

            <stroke android:width="1dp" android:color="@color/button_border" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>