<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/modeLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="@string/modeSelectText" />

        <Button
            android:id="@+id/blueBttn"
            android:layout_width="@dimen/optionButtonWidth"
            android:layout_height="wrap_content"
            android:layout_below="@id/modeLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_option_button"
            android:text="@string/blueBttnText"
            android:textColor="@color/customButtonTextColor"
            android:textSize="@dimen/optionButtonTextSize"
            android:onClick="onClick" />

        <Button
            android:id="@+id/redBttn"
            android:layout_width="@dimen/optionButtonWidth"
            android:layout_height="wrap_content"
            android:layout_below="@id/blueBttn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_option_button"
            android:lines="2"
            android:text="@string/redBttnText"
            android:textColor="@color/customButtonTextColor"
            android:textSize="@dimen/optionButtonTextSize"
            android:onClick="onClick" />

        <Button
            android:id="@+id/yellowBttn"
            android:layout_width="@dimen/optionButtonWidth"
            android:layout_height="wrap_content"
            android:layout_below="@id/redBttn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_option_button"
            android:lines="2"
            android:text="@string/yellowBttnText"
            android:textColor="@color/customButtonTextColor"
            android:textSize="@dimen/optionButtonTextSize"
            android:onClick="onClick" />

        <Button
            android:id="@+id/whiteBttn"
            android:layout_width="@dimen/optionButtonWidth"
            android:layout_height="wrap_content"
            android:layout_below="@id/yellowBttn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_option_button"
            android:lines="2"
            android:text="@string/whiteBttnText"
            android:textColor="@color/customButtonTextColor"
            android:textSize="@dimen/optionButtonTextSize"
            android:onClick="onClick" />

        <Button
            android:id="@+id/optionCancelBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whiteBttn"
            android:layout_centerHorizontal="true"
            android:text="@string/cancelText"
            android:textColor="#444444"
            android:textSize="@dimen/optionButtonTextSize"
            android:onClick="endActivity" />
    </RelativeLayout>

</ScrollView>